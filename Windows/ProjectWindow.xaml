<Window x:Class="ProjectManager.Windows.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Project" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Name}" Margin="10"/>
            <TextBox Text="{Binding Notes}" AcceptsReturn="True" Height="100" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Click="Save_Click" Margin="10"/>
                <Button Content="Return" Click="Return_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>